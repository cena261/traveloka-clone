{
	"info": {
		"_postman_id": "iam-module-collection",
		"name": "Traveloka IAM API",
		"description": "Complete API collection for Traveloka IAM (Identity & Access Management) module.\n\nFeatures:\n- User Registration & Login\n- JWT Authentication\n- Password Management\n- Session Management\n- Two-Factor Authentication\n- OAuth2 Social Login\n- Admin User Management",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"variable": [
		{
			"key": "base_url",
			"value": "http://localhost:8080",
			"type": "string"
		},
		{
			"key": "access_token",
			"value": "",
			"type": "string"
		},
		{
			"key": "refresh_token",
			"value": "",
			"type": "string"
		},
		{
			"key": "user_id",
			"value": "",
			"type": "string"
		}
	],
	"item": [
		{
			"name": "Authentication",
			"item": [
				{
					"name": "Register User",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"if (pm.response.code === 201) {",
									"    const jsonData = pm.response.json();",
									"    pm.collectionVariables.set('user_id', jsonData.data.id);",
									"    pm.test('User registered successfully', () => {",
									"        pm.expect(jsonData.status).to.eql('SUCCESS');",
									"    });",
									"}"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"email\": \"john.doe@example.com\",\n  \"username\": \"johndoe\",\n  \"password\": \"SecureP@ss123\",\n  \"firstName\": \"John\",\n  \"lastName\": \"Doe\",\n  \"phone\": \"+84901234567\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/api/v1/auth/register",
							"host": ["{{base_url}}"],
							"path": ["api", "v1", "auth", "register"]
						},
						"description": "Register a new user account"
					},
					"response": []
				},
				{
					"name": "Login",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"if (pm.response.code === 200) {",
									"    const jsonData = pm.response.json();",
									"    pm.collectionVariables.set('access_token', jsonData.data.accessToken);",
									"    pm.collectionVariables.set('refresh_token', jsonData.data.refreshToken);",
									"    pm.test('Login successful', () => {",
									"        pm.expect(jsonData.status).to.eql('SUCCESS');",
									"        pm.expect(jsonData.data.accessToken).to.not.be.empty;",
									"    });",
									"}"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"email\": \"john.doe@example.com\",\n  \"password\": \"SecureP@ss123\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/api/v1/auth/login",
							"host": ["{{base_url}}"],
							"path": ["api", "v1", "auth", "login"]
						},
						"description": "Authenticate user and receive JWT tokens"
					},
					"response": []
				},
				{
					"name": "Logout",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{access_token}}"
							}
						],
						"url": {
							"raw": "{{base_url}}/api/v1/auth/logout",
							"host": ["{{base_url}}"],
							"path": ["api", "v1", "auth", "logout"]
						},
						"description": "Logout current user and invalidate session"
					},
					"response": []
				},
				{
					"name": "Refresh Token",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"if (pm.response.code === 200) {",
									"    const jsonData = pm.response.json();",
									"    pm.collectionVariables.set('access_token', jsonData.data.accessToken);",
									"}"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"refreshToken\": \"{{refresh_token}}\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/api/v1/auth/refresh",
							"host": ["{{base_url}}"],
							"path": ["api", "v1", "auth", "refresh"]
						},
						"description": "Refresh access token using refresh token"
					},
					"response": []
				},
				{
					"name": "Forgot Password",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"email\": \"john.doe@example.com\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/api/v1/auth/forgot-password",
							"host": ["{{base_url}}"],
							"path": ["api", "v1", "auth", "forgot-password"]
						},
						"description": "Request password reset email"
					},
					"response": []
				},
				{
					"name": "Reset Password",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"token\": \"reset-token-from-email\",\n  \"newPassword\": \"NewSecureP@ss456\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/api/v1/auth/reset-password",
							"host": ["{{base_url}}"],
							"path": ["api", "v1", "auth", "reset-password"]
						},
						"description": "Reset password using token from email"
					},
					"response": []
				},
				{
					"name": "Verify Email",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"token\": \"verification-token-from-email\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/api/v1/auth/verify-email",
							"host": ["{{base_url}}"],
							"path": ["api", "v1", "auth", "verify-email"]
						},
						"description": "Verify email address using token"
					},
					"response": []
				},
				{
					"name": "Change Password",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{access_token}}"
							},
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"currentPassword\": \"SecureP@ss123\",\n  \"newPassword\": \"NewSecureP@ss456\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/api/v1/auth/change-password",
							"host": ["{{base_url}}"],
							"path": ["api", "v1", "auth", "change-password"]
						},
						"description": "Change password for authenticated user"
					},
					"response": []
				}
			],
			"description": "Authentication endpoints for user registration, login, and password management"
		},
		{
			"name": "User Management",
			"item": [
				{
					"name": "Get Current User",
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{access_token}}"
							}
						],
						"url": {
							"raw": "{{base_url}}/api/v1/users/me",
							"host": ["{{base_url}}"],
							"path": ["api", "v1", "users", "me"]
						},
						"description": "Get current authenticated user profile"
					},
					"response": []
				},
				{
					"name": "Update Current User",
					"request": {
						"method": "PUT",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{access_token}}"
							},
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"firstName\": \"John\",\n  \"lastName\": \"Doe\",\n  \"phone\": \"+84901234567\",\n  \"dateOfBirth\": \"1990-01-01\",\n  \"gender\": \"MALE\",\n  \"preferredLanguage\": \"vi\",\n  \"timezone\": \"Asia/Ho_Chi_Minh\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/api/v1/users/me",
							"host": ["{{base_url}}"],
							"path": ["api", "v1", "users", "me"]
						},
						"description": "Update current user profile"
					},
					"response": []
				},
				{
					"name": "Get All Users (Admin)",
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{access_token}}"
							}
						],
						"url": {
							"raw": "{{base_url}}/api/v1/users?page=0&size=20",
							"host": ["{{base_url}}"],
							"path": ["api", "v1", "users"],
							"query": [
								{
									"key": "page",
									"value": "0"
								},
								{
									"key": "size",
									"value": "20"
								}
							]
						},
						"description": "Get all users with pagination (Admin only)"
					},
					"response": []
				},
				{
					"name": "Get User By ID (Admin)",
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{access_token}}"
							}
						],
						"url": {
							"raw": "{{base_url}}/api/v1/users/{{user_id}}",
							"host": ["{{base_url}}"],
							"path": ["api", "v1", "users", "{{user_id}}"]
						},
						"description": "Get user details by ID (Admin only)"
					},
					"response": []
				},
				{
					"name": "Lock User (Admin)",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{access_token}}"
							}
						],
						"url": {
							"raw": "{{base_url}}/api/v1/users/{{user_id}}/lock?reason=Suspicious activity",
							"host": ["{{base_url}}"],
							"path": ["api", "v1", "users", "{{user_id}}", "lock"],
							"query": [
								{
									"key": "reason",
									"value": "Suspicious activity"
								}
							]
						},
						"description": "Lock user account (Admin only)"
					},
					"response": []
				},
				{
					"name": "Unlock User (Admin)",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{access_token}}"
							}
						],
						"url": {
							"raw": "{{base_url}}/api/v1/users/{{user_id}}/unlock",
							"host": ["{{base_url}}"],
							"path": ["api", "v1", "users", "{{user_id}}", "unlock"]
						},
						"description": "Unlock user account (Admin only)"
					},
					"response": []
				}
			],
			"description": "User profile and account management endpoints"
		},
		{
			"name": "Session Management",
			"item": [
				{
					"name": "Get Active Sessions",
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{access_token}}"
							}
						],
						"url": {
							"raw": "{{base_url}}/api/v1/sessions/active",
							"host": ["{{base_url}}"],
							"path": ["api", "v1", "sessions", "active"]
						},
						"description": "Get all active sessions for current user"
					},
					"response": []
				},
				{
					"name": "Delete Session",
					"request": {
						"method": "DELETE",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{access_token}}"
							}
						],
						"url": {
							"raw": "{{base_url}}/api/v1/sessions/:sessionId",
							"host": ["{{base_url}}"],
							"path": ["api", "v1", "sessions", ":sessionId"],
							"variable": [
								{
									"key": "sessionId",
									"value": "session-uuid-here"
								}
							]
						},
						"description": "Delete a specific session"
					},
					"response": []
				},
				{
					"name": "Delete All Sessions Except Current",
					"request": {
						"method": "DELETE",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{access_token}}"
							}
						],
						"url": {
							"raw": "{{base_url}}/api/v1/sessions/all-except-current",
							"host": ["{{base_url}}"],
							"path": ["api", "v1", "sessions", "all-except-current"]
						},
						"description": "Logout all other devices/sessions"
					},
					"response": []
				}
			],
			"description": "Session management and device tracking"
		},
		{
			"name": "Two-Factor Authentication",
			"item": [
				{
					"name": "Setup 2FA",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{access_token}}"
							}
						],
						"url": {
							"raw": "{{base_url}}/api/v1/users/me/2fa/setup",
							"host": ["{{base_url}}"],
							"path": ["api", "v1", "users", "me", "2fa", "setup"]
						},
						"description": "Setup two-factor authentication and get QR code"
					},
					"response": []
				},
				{
					"name": "Verify 2FA Code",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{access_token}}"
							},
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"code\": \"123456\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/api/v1/users/me/2fa/verify",
							"host": ["{{base_url}}"],
							"path": ["api", "v1", "users", "me", "2fa", "verify"]
						},
						"description": "Verify 2FA code to complete setup"
					},
					"response": []
				},
				{
					"name": "Disable 2FA",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{access_token}}"
							},
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"password\": \"SecureP@ss123\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/api/v1/users/me/2fa/disable",
							"host": ["{{base_url}}"],
							"path": ["api", "v1", "users", "me", "2fa", "disable"]
						},
						"description": "Disable two-factor authentication"
					},
					"response": []
				}
			],
			"description": "Two-factor authentication management"
		},
		{
			"name": "OAuth2 Social Login",
			"item": [
				{
					"name": "Google OAuth Authorize",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{base_url}}/oauth/google/authorize",
							"host": ["{{base_url}}"],
							"path": ["oauth", "google", "authorize"]
						},
						"description": "Initiate Google OAuth flow (redirects to Google)"
					},
					"response": []
				},
				{
					"name": "Facebook OAuth Authorize",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{base_url}}/oauth/facebook/authorize",
							"host": ["{{base_url}}"],
							"path": ["oauth", "facebook", "authorize"]
						},
						"description": "Initiate Facebook OAuth flow (redirects to Facebook)"
					},
					"response": []
				}
			],
			"description": "OAuth2 social login integration"
		}
	]
}
