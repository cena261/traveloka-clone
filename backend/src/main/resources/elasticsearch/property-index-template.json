{
  "index_patterns": ["traveloka-properties*"],
  "priority": 1,
  "template": {
    "settings": {
      "number_of_shards": 2,
      "number_of_replicas": 1,
      "refresh_interval": "5s",
      "max_result_window": 50000,
      "analysis": {
        "normalizer": {
          "lowercase_normalizer": {
            "type": "custom",
            "filter": ["lowercase", "asciifolding"]
          }
        },
        "analyzer": {
          "vietnamese_analyzer": {
            "type": "custom",
            "tokenizer": "standard",
            "filter": [
              "lowercase",
              "asciifolding",
              "vietnamese_stop",
              "vietnamese_stemmer"
            ]
          },
          "vietnamese_search_analyzer": {
            "type": "custom",
            "tokenizer": "standard",
            "filter": [
              "lowercase",
              "asciifolding",
              "vietnamese_stop"
            ]
          },
          "vietnamese_autocomplete": {
            "type": "custom",
            "tokenizer": "keyword",
            "filter": [
              "lowercase",
              "asciifolding",
              "edge_ngram"
            ]
          },
          "search_as_you_type": {
            "type": "custom",
            "tokenizer": "standard",
            "filter": [
              "lowercase",
              "asciifolding"
            ]
          }
        },
        "filter": {
          "vietnamese_stop": {
            "type": "stop",
            "stopwords": [
              "và", "của", "các", "trong", "với", "từ", "cho", "đến", "một", "có",
              "là", "được", "không", "này", "đó", "những", "để", "như", "sẽ", "về",
              "tại", "đã", "hay", "hoặc", "nếu", "khi", "mà", "nhưng", "vì", "do",
              "theo", "trên", "dưới", "giữa", "sau", "trước", "ngoài", "trong",
              "khách", "sạn", "hotel", "resort", "villa", "homestay"
            ]
          },
          "vietnamese_stemmer": {
            "type": "stemmer",
            "language": "light_minimal"
          },
          "edge_ngram": {
            "type": "edge_ngram",
            "min_gram": 2,
            "max_gram": 20
          }
        }
      }
    },
    "mappings": {
      "dynamic": "strict",
      "properties": {
        "propertyId": {
          "type": "keyword",
          "doc_values": true
        },
        "name": {
          "type": "text",
          "analyzer": "vietnamese_analyzer",
          "search_analyzer": "vietnamese_search_analyzer",
          "fields": {
            "raw": {
              "type": "keyword",
              "normalizer": "lowercase_normalizer"
            },
            "suggest": {
              "type": "completion",
              "analyzer": "vietnamese_search_analyzer"
            },
            "autocomplete": {
              "type": "text",
              "analyzer": "vietnamese_autocomplete",
              "search_analyzer": "search_as_you_type"
            }
          }
        },
        "description": {
          "type": "object",
          "properties": {
            "vi": {
              "type": "text",
              "analyzer": "vietnamese_analyzer",
              "search_analyzer": "vietnamese_search_analyzer"
            },
            "en": {
              "type": "text",
              "analyzer": "english"
            }
          }
        },
        "location": {
          "type": "object",
          "properties": {
            "coordinates": {
              "type": "geo_point"
            },
            "city": {
              "type": "text",
              "analyzer": "vietnamese_analyzer",
              "search_analyzer": "vietnamese_search_analyzer",
              "fields": {
                "raw": {
                  "type": "keyword",
                  "normalizer": "lowercase_normalizer"
                },
                "suggest": {
                  "type": "completion",
                  "analyzer": "vietnamese_search_analyzer"
                }
              }
            },
            "countryCode": {
              "type": "keyword"
            },
            "address": {
              "type": "text",
              "analyzer": "vietnamese_analyzer",
              "search_analyzer": "vietnamese_search_analyzer"
            },
            "district": {
              "type": "text",
              "analyzer": "vietnamese_analyzer",
              "search_analyzer": "vietnamese_search_analyzer",
              "fields": {
                "raw": {
                  "type": "keyword",
                  "normalizer": "lowercase_normalizer"
                }
              }
            },
            "province": {
              "type": "text",
              "analyzer": "vietnamese_analyzer",
              "search_analyzer": "vietnamese_search_analyzer",
              "fields": {
                "raw": {
                  "type": "keyword",
                  "normalizer": "lowercase_normalizer"
                }
              }
            }
          }
        },
        "amenities": {
          "type": "nested",
          "properties": {
            "id": {
              "type": "keyword"
            },
            "name": {
              "type": "text",
              "analyzer": "vietnamese_analyzer",
              "search_analyzer": "vietnamese_search_analyzer",
              "fields": {
                "raw": {
                  "type": "keyword",
                  "normalizer": "lowercase_normalizer"
                }
              }
            },
            "category": {
              "type": "keyword"
            },
            "isHighlight": {
              "type": "boolean"
            }
          }
        },
        "propertyType": {
          "type": "keyword"
        },
        "starRating": {
          "type": "integer",
          "doc_values": true
        },
        "priceRange": {
          "type": "object",
          "properties": {
            "minPrice": {
              "type": "double",
              "doc_values": true
            },
            "maxPrice": {
              "type": "double",
              "doc_values": true
            },
            "currency": {
              "type": "keyword"
            },
            "averagePrice": {
              "type": "double",
              "doc_values": true
            }
          }
        },
        "ratings": {
          "type": "object",
          "properties": {
            "average": {
              "type": "double",
              "doc_values": true
            },
            "count": {
              "type": "integer",
              "doc_values": true
            },
            "breakdown": {
              "type": "object",
              "properties": {
                "5": {"type": "integer"},
                "4": {"type": "integer"},
                "3": {"type": "integer"},
                "2": {"type": "integer"},
                "1": {"type": "integer"}
              }
            }
          }
        },
        "availability": {
          "type": "object",
          "properties": {
            "totalRooms": {
              "type": "integer",
              "doc_values": true
            },
            "availableRooms": {
              "type": "integer",
              "doc_values": true
            },
            "isActive": {
              "type": "boolean"
            },
            "lastUpdated": {
              "type": "date"
            }
          }
        },
        "searchMetrics": {
          "type": "object",
          "properties": {
            "popularityScore": {
              "type": "double",
              "doc_values": true
            },
            "bookingConversionRate": {
              "type": "double",
              "doc_values": true
            },
            "searchFrequency": {
              "type": "integer",
              "doc_values": true
            },
            "lastBooked": {
              "type": "date"
            },
            "lastUpdated": {
              "type": "date"
            }
          }
        },
        "images": {
          "type": "object",
          "properties": {
            "thumbnail": {
              "type": "keyword",
              "index": false
            },
            "gallery": {
              "type": "keyword",
              "index": false
            },
            "count": {
              "type": "integer"
            }
          }
        },
        "policies": {
          "type": "object",
          "properties": {
            "checkInTime": {
              "type": "keyword"
            },
            "checkOutTime": {
              "type": "keyword"
            },
            "cancellationPolicy": {
              "type": "keyword"
            },
            "petFriendly": {
              "type": "boolean"
            },
            "smokingAllowed": {
              "type": "boolean"
            }
          }
        },
        "tags": {
          "type": "keyword"
        },
        "status": {
          "type": "keyword"
        },
        "indexedAt": {
          "type": "date"
        },
        "lastSyncedAt": {
          "type": "date"
        }
      }
    }
  }
}